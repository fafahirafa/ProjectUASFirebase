<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IntroductionActivity"
    android:orientation="vertical"
    android:background="@drawable/layout2"
    android:paddingTop="2dp"
    android:paddingLeft="30dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hallo"
        android:textColor="#fff"
        android:textSize="30sp"
        android:textStyle="bold"
        android:fontFamily="@font/alpha"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hallo! Aku Foxy."
        android:textColor="#fff"
        android:textSize="12sp"
        android:textStyle="bold"
        android:fontFamily="@font/roboto_regular"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aku adalah rubah pengingat."
        android:textColor="#fff"
        android:textSize="12sp"
        android:textStyle="bold"
        android:fontFamily="@font/roboto_regular"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aku akan hadir untuk membantu kamu untuk mengingat
segala urusanmu."
        android:textColor="#fff"
        android:textSize="12sp"
        android:textStyle="bold"
        android:fontFamily="@font/roboto_regular"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salam Rubah,"
        android:textColor="#fff"
        android:textSize="12sp"
        android:textStyle="bold"
        android:gravity="right"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginRight="50dp"
        android:layout_marginTop="30dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Au Auu."
        android:textColor="#fff"
        android:textSize="12sp"
        android:gravity="right"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/foxy"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/btn_mulai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:background="@drawable/button"
        android:text="Mulai"
        android:layout_marginTop="10dp"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="#fff"
        android:textSize="20sp"
        android:fontFamily="@font/roboto_regular"/>

    
    

</LinearLayout>